.index {
  width: 100%;
  height: 100%;
}

.index .imgBox {
  text-align: center;
}

.index .imgBox .img {
  width: 300rpx;
  height: 300rpx;
}

.index .inputBox {
  display: flex;
  border: 1rpx solid #E7E7E7;
  border-radius: 10rpx;
  align-items: center;
  margin: 0rpx 50rpx;
  margin-bottom: 50rpx;
  padding-left: 20rpx;
}

.index .inputBox .img {
  width: 50rpx;
  height: 50rpx;
}

.index .checkbox {
  padding-left: 50rpx;
  margin-bottom: 50rpx;
}

.index .buttonBox {
  text-align: center;
  margin: 0rpx 50rpx;
  color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}

.index .tipsBox {
  display: flex;
  align-items: center;
  padding-left: 50rpx;
  margin-top: 30rpx;
}

.index .tipsBox .img {
  width: 40rpx;
  height: 40rpx;
}

.index .tipsBox .tips {
  color: #999999;
  font-size: 28rpx;
}
