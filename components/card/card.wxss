.card {
  background-color: #fff;
  padding: 10rpx;
  margin-bottom: 5rpx;
  border-radius: 20rpx;
  border: 12rpx solid #EBEBEB;
}

.card .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #999;
  padding-bottom: 10rpx;
  font-size: 27rpx;
}

.card .value {
  display: flex;
  justify-content: space-between;
  text-align: center;
  margin-top: 15rpx;
}

.card .value .v .name {
  font-size: 27rpx;
}

.card .value .v .v_ {
  font-weight: 700;
  font-size: 25rpx;
}

.card .time {
  margin-top: 10rpx;
  font-size: 20rpx;
}

.card .button {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}
